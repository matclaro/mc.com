/*VARIABLE*/
$tono-fuerte = #1B1D26
$tono-medio = #425955
$tono-suave = #778C7A
$casi-blanco = #FFFFFF
$gris = #BFBD9F

/*KEYFRAMES*/
@keyframes fade-in {
  from {
    opacity 0
    margin-top 0
  }
  to {
  	margin-top 4em
  	opacity 1
  }
}

*
	margin 0			
	padding 0
	box-sizing border-box
	
body
	background $casi-blanco
	width 100%
	height 100%
	font-size 100%
	font-family 'Archivo Narrow', sans-serif
	position relative
header
	background $tono-fuerte
	height 50px
	position fixed
	padding-top 1em
	width 100%
	z-index 2
.no-padding 
	padding 0
.social
	margin 0
	& li 
		list-style none
		display inline
		margin 1em
		& a 
			color white
			font-size 2em
.right
	font-size 3em
	color white
	text-align right
	cursor pointer
	line-height 0
.main-sidebar
	background $casi-blanco
	& li
		list-style none
		& a 
			color $casi-blanco
.full-height
	height 100vh
	padding-top 50px
	position relative
	background $casi-blanco
	z-index 1
	& h1, h2
		font-size 3.6em
		margin 0
		& span
			color $tono-medio
.logo-home
	animation fade-in 3s normal forwards
	margin 4em auto 2em
.btn-1
	background none
	font-size 2em
	margin 1em auto
	padding .25em 1em
	text-transform uppercase
	display block
	color $tono-fuerte
	border solid .25em $tono-medio
	position relative
	box-sizing border-box
	width 220px
	height 70px
	animation fade-in 3s normal forwards
	& span
		position absolute
		margin auto
		left 0
		right 0
		top .75em
		bottom 0
.btn-1:hover
	background $tono-medio
	transition all .5s
	& span
		color $casi-blanco
		
.img-bg-cont
	position absolute
	z-index 1
	right 1em
	top 20%
.about-cont
	position absolute
	z-index 2
	top 50px
	width 100%
.col-left-about
	position relative
	& .title
		width 100%
		color $casi-blanco
		background $gris
		position absolute
		padding .5em 
		top 6em
		z-index 3
	& .box-text
		position absolute
		background $casi-blanco
		font-family: 'PT Serif', serif
		z-index 2
		font-size 1.6em
		top 2em
		right 3em
		padding 5em 1.5em 1em;
		width 70%
		border 4px solid $gris
		
	

				
@media(max-width:768px)
	.logo-home
		max-width 70%
		margin-left auto
		margin-right auto
	.social li 
		margin .25em
		& a 
			margin 0
	.full-height
		height auto
		padding-top 50px
		position relative
		background $casi-blanco
		z-index 1
		& h1, h2
			font-size 2.5em
			margin 0
			& span
				color $tono-medio
		